@model IEnumerable<BTL_Mvc.Models.Entities.HangHoa>

@foreach (var item in Model)
{
    String @imageName = "/Content/img/" + @item.MaLoai + "/" + @item.Anh;
<div class="col-md-4 col-xs-6">
    <div class="shop">
        <div class="shop-img">
            <img src=@imageName alt="">
        </div>
        <div class="shop-body">
            <h3>@item.TenHang<br>Collection</h3>
            <a href="#" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>            
}
